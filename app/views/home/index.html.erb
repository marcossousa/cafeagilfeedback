<nav>
	<%= link_to 'Dê sua opnião!', new_feedback_path %>
</nav>
<section id="welldonecontainer">
	<header>
		<%= image_tag("welldone.png") %>
		<span>O que foi bom?</span>
		<ul>
			<% @good.each do |feedback| %>
			  <li><%=feedback.message %>
				<%if feedback.name != nil and feedback.twitter_id != nil %>
					<br/><b>Por:</b><%=link_to feedback.name, "http://twitter.com/" + feedback.twitter_id%>
				<%end%>
				
			  </li>
			<% end %>
		</ul>
	</header>
</section>
<section id="baddonecontainer">
	<header>
		<%= image_tag("baddone.png") %>
		<span>O que poderia ser melhor?</span>
		<ul>
			<% @bad.each do |feedback| %>
			  <li>
					<%= feedback.message %>
					<%if feedback.name != nil and feedback.twitter_id != nil %>
						<br/><b>Por:</b><%=link_to feedback.name, "http://twitter.com/" + feedback.twitter_id%>
					<%end%>
			  </li>
			<% end %>
		</ul>
	</header>
</section>